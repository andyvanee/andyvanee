<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "andyvanee.com" %></title>

    <link href="http://fonts.googleapis.com/css?family=Rokkitt:700" rel="stylesheet" type="text/css">
    <%= stylesheet_link_tag "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="container">
      <div class="masthead">
        <h1><a href="/">andyvanee.com</a></h1>
      </div>
      <div class="main" role="main">
        <h2><%= current_page.data.title %></h2>

        <% if current_article %>
          <div class="date"><%= current_article.date.strftime('%b %d, %Y')%></div>
        <% end %>

        <%= yield %>

        <% if current_article %>
          <div class="pagination">
            <% if current_article.next_article %>
              <span class="next">
                <%= link_to '&laquo; Newer', current_article.next_article %>
              </span>
            <% else %>
              <span class="next">&laquo; Newer</span>
            <% end %>
            <% if current_article.previous_article %>
              <span class="prev">
                <%= link_to 'Older &raquo;', current_article.previous_article %>
              </span>
            <% else %>
              <span class="prev">Older &raquo;</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div><!-- .container -->
  </body>
</html>
